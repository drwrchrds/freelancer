<% var disabled %>
<% if(deliverable.get('completed')) { disabled = 'disabled' } %>

<% if(deliverable.get('completed')) { %>
  <button 
    class='checkbox checked btn btn-sm btn-default'>
  </button>  
  <span class='completed'>
<% } else { %>
  <button 
    class='unchecked checkbox btn btn-sm btn-default'>
  </button>
  <span>
<% } %>
  <%= deliverable.escape('name') %> <%= deliverable.escape('rank') %>
</span>

<button 
  class="remove-task btn btn-sm btn-danger <%= disabled %>">
  delete
</button>

<button
  class="show-subdeliverables btn btn-sm btn-default">
  <span class='caret'></span>
</button>
<button
  class="hide-subdeliverables btn btn-sm btn-default">
  <span class='caret caret-reversed'></span>
</button>

<button 
  class="show-new-subdeliverable btn btn-sm btn-default">
  +
</button>

<ul class="subdeliverables"></ul>